            </div>
            <div class="form-group">
                <label asp-for="KorisnickoIme" class="control-label"></label>
                <input asp-for="KorisnickoIme" class="form-control" />
                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipKorisnika" class="control-label"></label>
                <select asp-for="TipKorisnika" class="form-control"></select>
                <span asp-validation-for="TipKorisnika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumZaposlenja" class="control-label"></label>
                <input asp-for="DatumZaposlenja" class="form-control" />
                <span asp-validation-for="DatumZaposlenja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lozinka" class="control-label"></label>
                <input asp-for="Lozinka" class="form-control" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVC" class="control-label"></label>
                <input asp-for="CVC" class="form-control" />
                <span asp-validation-for="CVC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIstekaKartice" class="control-label"></label>
                <input asp-for="DatumIstekaKartice" class="form-control" />
                <span asp-validation-for="DatumIstekaKartice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojKartice" class="control-label"></label>
                <input asp-for="BrojKartice" class="form-control" />
                <span asp-validation-for="BrojKartice" class="text-danger"></span>
