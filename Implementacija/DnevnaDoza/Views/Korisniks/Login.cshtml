@model DnevnaDoza.Models.LoginViewModel


<h2>Prijava</h2>

<form asp-controller="Korisniks" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="KorisnickoIme"></label>
        <input asp-for="KorisnickoIme" class="form-control" />
        <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lozinka"></label>
        <input asp-for="Lozinka" class="form-control" type="password" />
        <span asp-validation-for="Lozinka" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Prijavi se</button>
</form>