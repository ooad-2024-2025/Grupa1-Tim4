@{
    ViewData["Title"] = "DnevnaDoza";
}

<!-- Naslov dobrodošlice -->
<h1 style="text-align: center; color: #F08080; margin-top: 30px; font-size: 36px;">Dobro Došli!</h1>

<!-- Podnaslov -->
<p style="text-align: center; font-size: 18px; margin-top: 10px;">
    Uživajte u kupovini – velik asortiman proizvoda za vaše zdravlje i sreću.
</p>

<!-- Kategorije Proizvoda -->
