@model DnevnaDoza.Models.NarudzbaProizvoda

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiraj novu stavku</h1>

<h4>NarudzbaProizvoda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrojProizvoda" class="control-label"></label>
                <input asp-for="BrojProizvoda" class="form-control" />
                <span asp-validation-for="BrojProizvoda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UkupnaCijena" class="control-label"></label>
                <input asp-for="UkupnaCijena" class="form-control" />
                <span asp-validation-for="UkupnaCijena" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="JeObradjenaNarudzba" /> @Html.DisplayNameFor(model => model.JeObradjenaNarudzba)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DatumNarudzbe" class="control-label"></label>
                <input asp-for="DatumNarudzbe" class="form-control" />
                <span asp-validation-for="DatumNarudzbe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDKorisnika" class="control-label"></label>
                <input asp-for="IDKorisnika" class="form-control" />
                <span asp-validation-for="IDKorisnika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDObradaNarudzbe" class="control-label"></label>
                <input asp-for="IDObradaNarudzbe" class="form-control" />
                <span asp-validation-for="IDObradaNarudzbe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
