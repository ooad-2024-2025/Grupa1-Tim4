@model IEnumerable<DnevnaDoza.Models.NarudzbaProizvoda>

@{
    ViewData["Title"] = "Index";
}

<h1>NarudzbaProizvoda</h1>

<p>
    <a asp-action="Create">Kreiraj novu stavku</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojProizvoda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UkupnaCijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JeObradjenaNarudzba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumNarudzbe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDObradaNarudzbe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojProizvoda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UkupnaCijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JeObradjenaNarudzba)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumNarudzbe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDKorisnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDObradaNarudzbe)
            </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IDNarudzbe">Uredi</a>
                        <nobr>|</nobr>
                        <a asp-action="Delete" asp-route-id="@item.IDNarudzbe">Izbrisi</a>
                        <nobr>|</nobr>
                    }
                    <a asp-action="Details" asp-route-id="@item.IDNarudzbe">Detalji</a>
                </td>
        </tr>
}
    </tbody>
</table>
