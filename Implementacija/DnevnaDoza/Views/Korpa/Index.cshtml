@model IEnumerable<DnevnaDoza.Models.Korpa>

@{
    ViewData["Title"] = "Vaša Korpa";
}

<h1>Vaša Korpa</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Proizvod</th>
                <th>Cijena (KM)</th>
                <th>Količina</th>
                <th>Ukupno (KM)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Proizvod.Naziv</td>
                    <td>@item.Cijena.ToString("0.00")</td>
                    <td>@item.Kolicina</td>
                    <td>@(item.Cijena * item.Kolicina).ToString("0.00")</td>
                    <td>
                        <form asp-action="RemoveItem" method="post">
                            <input type="hidden" name="id" value="@item.ID" />
                            <button type="submit" class="btn btn-danger">Ukloni</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Ukupno: @Model.Sum(k => k.Cijena * k.Kolicina).ToString("0.00") KM</h3>

    <!-- Ispravka: Forma za završetak narudžbe -->
    <form asp-action="CompleteOrder" method="post">
        <button type="submit" class="btn btn-success">Završi narudžbu</button>
    </form>
}
else
{
    <p>Vaša korpa je prazna.</p>
}

<!-- Prikazivanje poruka -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-3">
        @TempData["Message"]
    </div>
}