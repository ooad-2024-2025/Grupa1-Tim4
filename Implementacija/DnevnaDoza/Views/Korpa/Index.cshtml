@model IEnumerable<DnevnaDoza.Models.Korpa>

@{
    ViewData["Title"] = "Index";
}

<h1>Korpa</h1>

<p>
    <a asp-action="Create">Kreiraj novu korpu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StanjeKorpe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojProizvoda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PotvrdjenaNarudzba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UkupanIznos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDKorisnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDNarudzbe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StanjeKorpe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojProizvoda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PotvrdjenaNarudzba)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UkupanIznos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDKorisnik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNarudzbe)
            </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID">Uredi</a>
                        <nobr>|</nobr>
                        <a asp-action="Delete" asp-route-id="@item.ID">Izbrisi</a>
                        <nobr>|</nobr>
                    }
                    <a asp-action="Details" asp-route-id="@item.ID">Detalji</a>
                </td>
        </tr>
}
    </tbody>
</table>
