@model IEnumerable<DnevnaDoza.Models.Apoteka>

@{
    ViewData["Title"] = "Index";
}

<h1>Apoteka</h1>

 @if (User.IsInRole("Administrator")){ 
<p>
    <a asp-action="Create">Dodaj novu lokaciju</a>
</p>
 }


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadnoVrijeme)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RadnoVrijeme)
            </td>
                <td>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
                    <nobr>|</nobr>
                    <a asp-action="Delete" asp-route-id="@item.Id">Izbrisi</a>
                    <nobr>|</nobr>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> 
            </td>
        </tr>
}
    </tbody>
</table>
